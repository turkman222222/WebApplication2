@model IEnumerable<WebApplication2.Models.Author>

@{
    ViewData["Title"] = "Список авторов";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a class="btn btn-success" asp-action="Create">Создать нового автора</a>
</p>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Authorname)
            </th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Authorname)
                </td>
                <td>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.ID">Редактировать</a> |
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.ID">Детали</a> |
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.ID">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    body {
        background-color: #f8f9fa; /* Светлый фон */
        color: #343a40; /* Темный текст */
    }

    h1 {
        color: #007bff; /* Цвет заголовка */
    }

    .table {
        margin-top: 20px;
    }

    .btn {
        margin-right: 5px; /* Отступ между кнопками */
    }
</style>
