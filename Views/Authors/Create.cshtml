@model WebApplication2.Models.Author

@{
    ViewData["Title"] = "Создание автора";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<div class="container mt-5">
    <h4 class="text-center">Создать нового автора</h4>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <div class="form-group">
                    <label asp-for="Authorname" class="control-label">Имя автора</label>
                    <input asp-for="Authorname" class="form-control" placeholder="Введите имя автора" />
                    <span asp-validation-for="Authorname" class="text-danger"></span>
                </div>
                <div class="text-center mt-4">
                    <input type="submit" value="Создать" class="btn btn-primary btn-lg" />
                </div>
            </form>
        </div>
    </div>

    <div class="text-center mt-4">
        <a asp-action="Index" class="btn btn-secondary">Назад к списку</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    body {
        background-color: #f8f9fa;
        font-family: 'Arial', sans-serif;
    }

    h1 {
        color: #343a40;
        margin-bottom: 20px;
    }

    .container {
        background-color: #ffffff;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        transition: transform 0.2s; /* Анимация при наведении */
    }

        .container:hover {
            transform: scale(1.02); /* Увеличение при наведении */
        }

    .btn-primary {
        background-color: #007bff;
        border: none;
        transition: background-color 0.3s; /* Плавный переход цвета */
        width: 100%; /* Кнопка занимает всю ширину */
    }

        .btn-primary:hover {
            background-color: #0056b3; /* Темнее при наведении */
        }

    .btn-secondary {
        margin-top: 10px;
        background-color: #6c757d;
        border: none;
        transition: background-color 0.3s; /* Плавный переход цвета */
    }

        .btn-secondary:hover {
            background-color: #5a6268; /* Темнее при наведении */
        }

    .form-group label {
        font-weight: bold; /* Жирный текст для меток */
    }

    .text-danger {
        font-size: 0.9rem; /* Уменьшенный размер текста для ошибок */
    }
</style>
