@model WebApplication2.Models.Author

@{
    ViewData["Title"] = "Создание автора";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<div class="container mt-5">
    <h4 class="text-center">Создать нового автора</h4>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <div class="form-group">
                    <label asp-for="Authorname" class="control-label"></label>
                    <input asp-for="Authorname" class="form-control" placeholder="Введите имя автора" />
                    <span asp-validation-for="Authorname" class="text-danger"></span>
                </div>
                <div class="form-group text-center">
                    <input type="submit" value="Создать" class="btn btn-primary btn-lg" />
                </div>
            </form>
        </div>
    </div>

    <div class="text-center mt-4">
        <a asp-action="Index" class="btn btn-secondary">Назад к списку</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    body {
        background-color: #f8f9fa;
    }

    h1 {
        color: #343a40;
    }

    .container {
        background-color: #ffffff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .btn-secondary {
        margin-top: 10px;
    }
</style>


