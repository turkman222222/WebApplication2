@model WebApplication2.Models.Author

@{
    ViewData["Title"] = "Детали автора";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<div class="container mt-5">
    <h4 class="text-center">Автор</h4>
    <hr />
    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Authorname)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Authorname)
                </dd>
            </dl>
        </div>
    </div>
    <div class="text-center mt-4">
        <a asp-action="Edit" asp-route-id="@Model?.ID" class="btn btn-primary">Редактировать</a>
        <a asp-action="Index" class="btn btn-secondary">Назад к списку</a>
    </div>
</div>

<style>
    body {
        background-color: #f8f9fa;
        font-family: 'Arial', sans-serif;
    }

    h1 {
        color: #343a40;
    }

    .container {
        background-color: #ffffff;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }

    .card {
        border: none;
        margin-top: 20px;
    }

    .btn {
        margin: 10px; /* Увеличен отступ между кнопками */
        width: 150px; /* Фиксированная ширина кнопок */
    }

    .btn-primary {
        background-color: #007bff; /* Основной цвет для кнопки редактирования */
        border: none; /* Убираем рамку */
    }

        .btn-primary:hover {
            background-color: #0056b3; /* Темнее при наведении */
        }

    .btn-secondary {
        background-color: #6c757d; /* Основной цвет для кнопки "Назад" */
        border: none; /* Убираем рамку */
    }

        .btn-secondary:hover {
            background-color: #5a6268; /* Темнее при наведении */
        }
</style>

