@model WebApplication2.Models.Author

@{
    ViewData["Title"] = "Удаление автора";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<div class="container mt-5">
    <h3 class="text-center">Вы уверены, что хотите удалить этого автора?</h3>
    <div class="card mt-4">
        <div class="card-header">
            <h4>Детали автора</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Authorname)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Authorname)
                </dd>
            </dl>
            <form asp-action="Delete" class="text-center">
                <input type="hidden" asp-for="ID" />
                <div class="mt-4">
                    <button type="submit" class="btn btn-danger btn-lg">Удалить</button>
                    <a asp-action="Index" class="btn btn-secondary btn-lg">Назад к списку</a>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f8f9fa;
        font-family: 'Arial', sans-serif;
    }

    h1 {
        color: #343a40;
    }

    .container {
        background-color: #ffffff;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }

    .card {
        border: none;
    }

    .btn {
        margin: 10px; /* Увеличен отступ между кнопками */
        width: 150px; /* Фиксированная ширина кнопок */
    }

    .btn-danger {
        background-color: #dc3545; /* Основной цвет для кнопки удаления */
        border: none; /* Убираем рамку */
    }

        .btn-danger:hover {
            background-color: #c82333; /* Темнее при наведении */
        }

    .btn-secondary {
        background-color: #6c757d; /* Основной цвет для кнопки "Назад" */
        border: none; /* Убираем рамку */
    }

        .btn-secondary:hover {
            background-color: #5a6268; /* Темнее при наведении */
        }
</style>
