@model WebApplication2.Models.Author

@{
    ViewData["Title"] = "Редактирование";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<div class="container mt-5">
    <h4 class="text-center">Редактирование автора</h4>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ID" />
                <div class="form-group">
                    <label asp-for="Authorname" class="control-label"></label>
                    <input asp-for="Authorname" class="form-control" />
                    <span asp-validation-for="Authorname" class="text-danger"></span>
                </div>
                <div class="form-group text-center">
                    <input type="submit" value="Сохранить" class="btn btn-primary btn-lg" />
                </div>
            </form>
        </div>
    </div>

    <div class="text-center mt-4">
        <a asp-action="Index" class="btn btn-secondary">Назад к списку</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    body {
        background-color: #f8f9fa;
        font-family: 'Arial', sans-serif;
    }

    h1 {
        color: #343a40;
    }

    .container {
        background-color: #ffffff;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }

    .form-group {
        margin-bottom: 20px; /* Увеличен отступ между полями формы */
    }

    .btn {
        width: 150px; /* Фиксированная ширина кнопок */
    }

    .btn-primary {
        background-color: #007bff; /* Основной цвет для кнопки сохранения */
        border: none; /* Убираем рамку */
    }

        .btn-primary:hover {
            background-color: #0056b3; /* Темнее при наведении */
        }

    .btn-secondary {
        background-color: #6c757d; /* Основной цвет для кнопки "Назад" */
        border: none; /* Убираем рамку */
    }

        .btn-secondary:hover {
            background-color: #5a6268; /* Темнее при наведении */
        }
</style>

