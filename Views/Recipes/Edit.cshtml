@model WebApplication2.Models.Recipe

@{
    ViewData["Title"] = "Редактировать рецепт";
}

<h1 class="mt-4 text-center">@ViewData["Title"]</h1>

<div class="container mt-5">
    <h4 class="text-center">Информация о рецепте</h4>
    <hr />
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ID" />

                <div class="form-group">
                    <label asp-for="RecipeName" class="control-label"></label>
                    <input asp-for="RecipeName" class="form-control" />
                    <span asp-validation-for="RecipeName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Discription" class="control-label"></label>
                    <input asp-for="Discription" class="form-control" />
                    <span asp-validation-for="Discription" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CategoryID" class="control-label"></label>
                    <select asp-for="CategoryID" class="form-control" asp-items="ViewBag.CategoryID"></select>
                    <span asp-validation-for="CategoryID" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="AuthorID" class="control-label"></label>
                    <select asp-for="AuthorID" class="form-control" asp-items="ViewBag.AuthorID"></select>
                    <span asp-validation-for="AuthorID" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CookingTime" class="control-label"></label>
                    <input asp-for="CookingTime" class="form-control" />
                    <span asp-validation-for="CookingTime" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Image" class="control-label"></label>
                    <input asp-for="Image" class="form-control" />
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>

                <div class="form-group text-center">
                    <input type="submit" value="Сохранить" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div class="text-center mt-4">
        <a class="btn btn-secondary" asp-action="Index">Назад к списку</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    body {
        background-color: #f8f9fa; /* Светлый фон для страницы */
        color: #343a40; /* Темный текст */
        font-family: Arial, sans-serif; /* Шрифт */
    }

    h1 {
        color: #007bff; /* Цвет заголовка */
        margin-bottom: 30px; /* Отступ снизу */
    }

    h4 {
        text-align: center; /* Центрирование подзаголовка */
        margin-bottom: 20px; /* Отступ снизу */
    }

    .container {
        background-color: #ffffff; /* Белый фон для контейнера */
        padding: 30px; /* Отступ внутри контейнера */
        border-radius: 10px; /* Закругленные углы */
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1); /* Тень для контейнера */
    }

    .form-group {
        margin-bottom: 20px; /* Отступ между полями формы */
    }

    .btn {
        padding: 10px 20px; /* Увеличенный размер кнопок */
        font-size: 16px; /* Увеличенный размер шрифта */
    }

    .btn-primary {
        background-color: #007bff; /* Цвет кнопки "Сохранить" */
        border: none; /* Убираем рамку */
    }

        .btn-primary:hover {
            background-color: #0056b3; /* Темнее при наведении */
        }

    .btn-secondary {
        background-color: #6c757d; /*

            background-color: #6c757d; /* Цвет кнопки "Назад" */
        border: none; /* Убираем рамку */
    }

        .btn-secondary:hover {
            background-color: #5a6268; /* Темнее при наведении */
        }
</style>
