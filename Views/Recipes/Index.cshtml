@model IEnumerable<WebApplication2.Models.Recipe>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center">Рецепты</h1>

<p class="text-center">
    <a class="btn btn-primary" asp-action="Create">Создать новый рецепт</a>
</p>

<table class="table table-striped table-bordered">
    <thead class="thead-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RecipeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Discription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CookingTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.RecipeName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Discription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CookingTime)
                </td>
                <td>
                    <img src="@item.Image" alt="@item.RecipeName" style="width: 100px; height: auto;" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.CategoryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Author.Authorname)
                </td>
                <td>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.ID">Редактировать</a> |
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.ID">Детали</a> |
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.ID">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    body {
        background-color: #f8f9fa;
        font-family: Arial, sans-serif;
    }

    h1 {
        margin-bottom: 20px;
        color: #333;
    }

    .table {
        margin: 0 auto;
        width: 90%;
        border-radius: 0.5rem;
        overflow: hidden;
    }

    .table th, .table td {
        text-align: center;
        vertical-align: middle;
    }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: #f2f2f2;
    }

    .btn {
        margin: 2px;
    }

    .thead-light {
        background-color: #e9ecef;
        color: #495057;
    }
</style>
