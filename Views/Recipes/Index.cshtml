<table class="table table-striped table-bordered text-center">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().RecipeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Discription)
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewBag.CookingTimeSortParam" asp-route-searchString="@ViewData["CurrentFilter"]" asp-route-categoryId="@ViewData["CurrentCategory"]">
                    @Html.DisplayNameFor(model => model.First().CookingTime)
                </a>
            </th>
            <th>
                Изображение
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Category.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Author.Authorname)
            </th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.RecipeName)
                </td>
                <td>
                    <div style="white-space: pre-wrap;">@item.Discription</div> <!-- Перенос на новую строку -->
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CookingTime)
                </td>
                <td>
                    @if (item.Image != null)
                    {
                        <img src="@Url.Action("GetImage", "Recipes", new { id = item.ID })" alt="@item.RecipeName" style="width:150px; height:150px;" />
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.CategoryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Author.Authorname)
                </td>
                <td>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.ID">Редактировать</a> |
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.ID">Детали</a> |
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.ID">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
