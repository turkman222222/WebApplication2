@model WebApplication2.Models.Category

@{
    ViewData["Title"] = "Редактирование категории";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<div class="container mt-5">
    <h4 class="text-center">Редактировать категорию</h4>
    <hr />
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ID" />
                <div class="form-group">
                    <label asp-for="CategoryName" class="control-label"></label>
                    <input asp-for="CategoryName" class="form-control" />
                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                </div>
                <div class="form-group text-center">
                    <input type="submit" value="Сохранить" class="btn btn-primary btn-lg" />
                </div>
            </form>
        </div>
    </div>
</div>

<div class="text-center mt-4">
    <a asp-action="Index" class="btn btn-secondary">Назад к списку</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    body {
        background-color: #f8f9fa;
        font-family: 'Arial', sans-serif;
    }

    h1 {
        color: #343a40;
    }

    .container {
        background-color: #ffffff;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }

    .btn {
        margin: 5px; /* Увеличен отступ между кнопками */
        padding: 10px 20px; /* Увеличен размер кнопок */
        font-size: 16px; /* Увеличен размер шрифта */
    }

    .btn-primary {
        background-color: #007bff; /* Основной цвет кнопки "Сохранить" */
        border: none; /* Убираем рамку */
    }

        .btn-primary:hover {
            background-color: #0056b3; /* Темнее при наведении */
        }

    .btn-secondary {
        background-color: #6c757d; /* Цвет кнопки "Назад" */
        border: none; /* Убираем рамку */
    }

        .btn-secondary:hover {
            background-color: #5a6268; /* Темнее при наведении */
        }
</style>

