@model WebApplication2.Models.Category

@{
    ViewData["Title"] = "Удаление категории";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<div class="container mt-5 text-center">
    <h3>Вы уверены, что хотите удалить эту категорию?</h3>
    <div>
        <h4>Категория:</h4>
        <hr />
        <dl class="row justify-content-center">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CategoryName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CategoryName)
            </dd>
        </dl>

        <form asp-action="Delete" class="mt-4">
            <input type="hidden" asp-for="ID" />
            <input type="submit" value="Удалить" class="btn btn-danger btn-lg" />
            <a asp-action="Index" class="btn btn-secondary btn-lg ml-3">Назад к списку</a>
        </form>
    </div>
</div>

<style>
    body {
        background-color: #f8f9fa;
        font-family: 'Arial', sans-serif;
    }

    h1 {
        color: #343a40;
    }

    .container {
        background-color: #ffffff;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }

    .btn {
        width: 150px; /* Фиксированная ширина кнопок */
    }

    .btn-danger {
        background-color: #dc3545; /* Основной цвет для кнопки удаления */
        border: none; /* Убираем рамку */
    }

        .btn-danger:hover {
            background-color: #c82333; /* Темнее при наведении */
        }

    .btn-secondary {
        background-color: #6c757d; /* Основной цвет для кнопки "Назад" */
        border: none; /* Убираем рамку */
    }

        .btn-secondary:hover {
            background-color: #5a6268; /* Темнее при наведении */
        }
</style>
