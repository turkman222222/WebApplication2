@model WebApplication2.Models.Category

@{
    ViewData["Title"] = "Детали категории";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<div class="container mt-5">
    <h4 class="text-center">Информация о категории</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CategoryName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CategoryName)
        </dd>
    </dl>
</div>

<div class="text-center mt-4">
    <a asp-action="Edit" asp-route-id="@Model?.ID" class="btn btn-warning">Редактировать</a> |
    <a asp-action="Index" class="btn btn-secondary">Назад к списку</a>
</div>

<style>
    body {
        background-color: #f8f9fa;
        font-family: 'Arial', sans-serif;
    }

    h1 {
        color: #343a40;
    }

    .container {
        background-color: #ffffff;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }

    .btn {
        margin: 5px; /* Увеличен отступ между кнопками */
        padding: 10px 20px; /* Увеличен размер кнопок */
        font-size: 16px; /* Увеличен размер шрифта */
    }

    .btn-warning {
        background-color: #ffc107; /* Цвет кнопки редактирования */
        border: none; /* Убираем рамку */
    }

        .btn-warning:hover {
            background-color: #e0a800; /* Темнее при наведении */
        }

    .btn-secondary {
        background-color: #6c757d; /* Цвет кнопки "Назад" */
        border: none; /* Убираем рамку */
    }

        .btn-secondary:hover {
            background-color: #5a6268; /* Темнее при наведении */
        }
</style>

