@model WebApplication2.Models.CokingStep

@{
    ViewData["Title"] = "Детали шага";
}

<h1 class="mt-4 text-center text-primary">@ViewData["Title"]</h1>

<div class="container mt-5">
    <h4 class="text-center">Информация о шаге приготовления</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.ReceptID)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.ReceptID)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.StepNumber)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.StepNumber)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.StepDiscription)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.StepDiscription)
        </dd>
    </dl>
</div>

<div class="text-center mt-3">
    <a class="btn btn-warning btn-lg" asp-action="Edit" asp-route-id="@Model?.ID">Редактировать</a>
    <a class="btn btn-secondary btn-lg" asp-action="Index">Назад к списку</a>
</div>

<style>
    body {
        background-color: #e9ecef; /* Светлый фон для всего тела */
        color: #343a40; /* Темный текст */
        font-family: Arial, sans-serif; /* Шрифт */
    }

    h1 {
        color: #007bff; /* Цвет заголовка */
        text-align: center; /* Центрирование заголовка */
    }

    h4 {
        text-align: center; /* Центрирование подзаголовка */
        margin-bottom: 20px; /* Отступ снизу */
    }

    .container {
        background-color: #ffffff; /* Белый фон для контейнера */
        padding: 30px; /* Отступ внутри контейнера */
        border-radius: 10px; /* Закругленные углы */
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1); /* Тень для контейнера */
    }

    .btn {
        margin: 0 5px; /* Отступ между кнопками */
        padding: 10px 20px; /* Увеличенный размер кнопок */
        font-size: 16px; /* Увеличенный размер шрифта */
    }

    .btn-warning {
        background-color: #ffc107; /* Цвет кнопки "Редактировать" */
        border: none; /* Убираем рамку */
    }

        .btn-warning:hover {
            background-color: #e0a800; /* Темнее при наведении */
        }

    .btn-secondary {
        background-color: #6c757d; /* Цвет кнопки "Назад" */
        border: none; /* Убираем рамку */
    }

        .btn-secondary:hover {
            background-color: #5a6268; /* Темнее при наведении */
        }
</style>
