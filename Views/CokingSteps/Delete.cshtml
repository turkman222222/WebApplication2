@model WebApplication2.Models.CokingStep

@{
    ViewData["Title"] = "Удалить";
}

<h1 class="mt-4 text-center text-danger">@ViewData["Title"]</h1>

<h3 class="text-center">Вы уверены, что хотите удалить этот шаг?</h3>
<div>
    <h4 class="text-center">Информация о шаге приготовления</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.ReceptID)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.ReceptID)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.StepNumber)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.StepNumber)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.StepDiscription)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.StepDiscription)
        </dd>
    </dl>

    <form asp-action="Delete" method="post" class="text-center">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Удалить" class="btn btn-danger" />
        <a class="btn btn-secondary" asp-action="Index">Назад к списку</a>
    </form>
</div>

<style>
    body {
        background-color: #e9ecef; /* Светлый фон для всего тела */
        color: #343a40; /* Темный текст */
        font-family: Arial, sans-serif; /* Шрифт */
    }

    h1 {
        color: #dc3545; /* Красный цвет заголовка для удаления */
        text-align: center; /* Центрирование заголовка */
    }

    h3 {
        text-align: center; /* Центрирование подзаголовка */
        margin-bottom: 20px; /* Отступ снизу */
    }

    h4 {
        text-align: center; /* Центрирование информации о шаге */
        margin-bottom: 10px; /* Отступ снизу */
    }

    .btn {
        margin: 0 5px; /* Отступ между кнопками */
    }
</style>
