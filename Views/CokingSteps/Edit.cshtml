@model WebApplication2.Models.CokingStep

@{
    ViewData["Title"] = "Редактировать шаг";
}

<h1 class="mt-4 text-center text-primary">@ViewData["Title"]</h1>

<h4 class="text-center">Редактирование шага приготовления</h4>
<hr />
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ID" />
                <div class="form-group">
                    <label asp-for="ReceptID" class="control-label"></label>
                    <input asp-for="ReceptID" class="form-control" />
                    <span asp-validation-for="ReceptID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StepNumber" class="control-label"></label>
                    <input asp-for="StepNumber" class="form-control" />
                    <span asp-validation-for="StepNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StepDiscription" class="control-label"></label>
                    <input asp-for="StepDiscription" class="form-control" />
                    <span asp-validation-for="StepDiscription" class="text-danger"></span>
                </div>
                <div class="form-group text-center">
                    <input type="submit" value="Сохранить" class="btn btn-success btn-lg" />
                </div>
            </form>
        </div>
    </div>
</div>

<div class="text-center mt-3">
    <a class="btn btn-secondary btn-lg" asp-action="Index">Назад к списку</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    body {
        background-color: #e9ecef; /* Светлый фон для всего тела */
        color: #343a40; /* Темный текст */
        font-family: Arial, sans-serif; /* Шрифт */
    }

    h1 {
        color: #007bff; /* Цвет заголовка */
        text-align: center; /* Центрирование заголовка */
    }

    h4 {
        text-align: center; /* Центрирование подзаголовка */
        margin-bottom: 20px; /* Отступ снизу */
    }

    .container {
        background-color: #ffffff; /* Белый фон для контейнера */
        padding: 30px; /* Отступ внутри контейнера */
        border-radius: 10px; /* Закругленные углы */
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1); /* Тень для контейнера */
    }

    .form-group {
        margin-bottom: 15px; /* Отступ между полями формы */
    }

    .btn {
        margin: 0 5px; /* Отступ между кнопками */
        padding: 10px 20px; /* Увеличенный размер кнопок */
        font-size: 16px; /* Увеличенный размер шрифта */
    }

    .btn-success {
        background-color: #28a745; /* Цвет кнопки "Сохранить" */
        border: none; /* Убираем рамку */
    }

        .btn-success:hover {
            background-color: #218838; /* Темнее при наведении */
        }

    .btn-secondary {
        background-color: #6c757d; /* Цвет кнопки "Назад" */
        border: none; /* Убираем рамку */
    }

        .btn-secondary:hover {
            background-color: #5a6268; /* Темнее при наведении */
        }
</style>
